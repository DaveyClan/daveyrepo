<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.program.daveyclanwizard"
       name="Davey Clan Wizard"
       version="1.0.0"
       provider-name="DaveyClan">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension
        point="xbmc.python.pluginsource"
        library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>Davey Clan Build Installer</summary>
        <description>Installs the Davey Clan Kodi build from GitHub</description>
        <platform>all</platform>
    </extension>

</addon>